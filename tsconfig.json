{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
